# dunst configuration
#   Petra E Bauman <petra.e.bauman@gmail.com>
#   https://codeberg.org/petraglyph/dotfiles

[global]
	follow = mouse
	origin = top-center

	# Window and Layout
	width = 400
	frame_width = 3
	padding = 10
	horizontal_padding = 10
	separator_height = 20
	separator_color = frame

	# Behaviour
	idle_threshold = 120
	sort = yes
	indicate_hidden = yes
	icon_position = off
	stack_duplicates = true
	hide_duplicate_count = true

	# Text
	font = Monospace 11
	line_height = 4
	alignment = center
	word_wrap = yes
	ignore_newline = no
	markup = full

	# The format of the message.  Possible variables are:
	#   %a  appname
	#   %s  summary
	#   %b  body
	#   %i  iconname (including its path)
	#   %I  iconname (without its path)
	#   %p  progress value if set ([  0%] to [100%]) or nothing
	#   %n  progress value if set without any extra characters
	#   %%  Literal %
	# Markup is allowed
	format = "<b><span color='#2EB398'>%s</span></b>\n%b"

	frame_color = "#000000"

[urgency_low]
	background = "#000000"
	foreground = "#EEEEEE"
	#frame_color = "#EEEEEE"
	timeout = 10

[urgency_normal]
	background = "#000000"
	foreground = "#EEEEEE"
	#frame_color = "#2EB398"
	timeout = 10

[urgency_critical]
	background = "#000000"
	foreground = "#EEEEEE"
	frame_color = "#DB5B5B"
	timeout = 0
