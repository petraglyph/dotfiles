# Shell aliases
#   Petra E Bauman <petra.e.bauman@gmail.com>
#   https://codeberg.org/petraglyph/dotfiles
alias ls="ls -Fh --group-directories-first"
alias cp="cp -r"
alias rm="rm -r"
alias less="less -x4"
alias ps="ps -H"
alias systemctl='systemctl --no-pager --full'
alias feh="feh -Z -B '#000000'"
